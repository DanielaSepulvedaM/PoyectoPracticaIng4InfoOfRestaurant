@using Identity.Model
@{
    ViewData["Title"] = "CrearFuncionario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FuncionarioViewModel
<div class="row justify-content-center m-4">
    <div class="col-6">
        <h2>Crear un funcionario</h2>
        <form asp-action="Crear" asp-route-restauranteId="@ViewBag.RestauranteID" method="post" class="border border-light p-4" style="box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Nombre de Usuario</label>
                <input asp-for="UserName" class="form-control" placeholder="Ingrese el nombre que contenga solo letras o digitos" style="background: #f2f2f2;" />
            </div>
            <div class="form-group">
                <label>Identidad</label>
                <input asp-for="Documento" class="form-control" placeholder="Ingrese la identidad" style="background: #f2f2f2;" />
            </div>
            <div class="form-group">
                <label>Correo</label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese el correo" style="background: #f2f2f2;" />
            </div>
            <div class="form-group">
                <label>Telefono</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Ingrese el telefono" style="background: #f2f2f2;" />
            </div>
            <select class="form-control" asp-for="Rol" asp-items="@(new SelectList(ViewBag.Roles))">
                <option>Seleccione una opcion</option>
            </select>
            <div class="pt-4">
                <button type="submit" class="btn  btn-lg btn-block" style="background: #ECA51F; color:#E5E5E5;">Crear</button>
            </div>
        </form>
    </div>
</div>

<style>
    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }
</style>