@using Identity.Model

@{
    ViewData["Title"] = "ListarFuncionariosRestaurante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Usuario>
<div class="container-fluid  mt-4">
    <a class="btnCrear btn-lg ml-4" asp-action="Crear" 
                                    asp-controller="Funcionario" 
                                    asp-route-restauranteID="@ViewBag.restauranteID">
                                    Crear Funcionario
    </a>
    <h2>Lista de Empleados</h2>
    <table class="table table-bordered table-striped table-sm text-center p-4 tablaListarFunc">
        <thead class="encabezados">
            <tr>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Identidad</th>
                <th>Correo</th>
                <th>Telefono</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var func in Model)
            {
                <tr>
                    <td>@func.Documento</td>
                    <td>@func.UserName</td>
                    <td>@func.Documento</td>
                    <td>@func.Email</td>
                    <td>@func.PhoneNumber</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Editar" 
                               asp-controller="Funcionario" 
                               asp-route-restauranteID="@ViewBag.restauranteID" 
                               asp-route-funcionarioID="@func.Id" class="btn btn-success btn-sm" style="font-size:12px">
                                Editar
                            </a>
                            <!--se envian los parametros en values y el nombre del parametro-->
                            <form  asp-action="Eliminar" 
                                   asp-controller="Funcionario" 
                                   asp-route-restauranteID="@ViewBag.restauranteID" method="post" class="pt-1 mx-1">
                                <button  type="submit" value="@func.Id" name="funcionarioID"  class="btn btn-outline-danger btn-sm" style="font-size:12px">
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .tablaListarFunc {
        box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);
        border-radius: 15px;
    }
    .encabezados {
        border-radius: 15px;
    }
    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }
    .btnCrear {
        color: #ECA51F;
        border: 1px solid #ECA51F;
    }
</style>