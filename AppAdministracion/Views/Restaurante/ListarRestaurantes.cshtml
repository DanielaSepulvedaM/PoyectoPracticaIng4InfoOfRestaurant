@{
    ViewData["Title"] = "ListarRestaurantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Entidades.Restaurante>
<div class="container-fluid  mt-4">
    <a class="btnCrear btn-lg ml-4" asp-action="CrearRestaurante" 
                                    asp-controller="Restaurante"
                                    asp-route-restauranteID="@ViewBag.restauranteID">
                                    Crear Restaurante
    </a>
    <h2>Listado de  Restaurantes</h2>
    <table class="table table-striped table-sm text-center p-4 tableListarRest">
        <thead class="encabezados">
            <tr>
                <th>RestauranteID</th>
                <th>Nombre</th>
                <th>Nit</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Barrio</th>
                <th>Accion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var res in Model)
            {
                <tr>
                    <td>@res.RestauranteID</td>
                    <td>@res.Nombre</td>
                    <td>@res.Nit</td>
                    <td>@res.Telefono</td>
                    <td>@res.Direccion</td>
                    <td>@res.Barrio</td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Listar"
                               asp-controller="Funcionario"
                               asp-route-restauranteID="@(res.RestauranteID)" class="btn btn-sm" style="font-size:12px;background-color:#ECA51F;color:#E5E5E5;">
                                Funcionarios
                            </a>
                            <a asp-action="EditarRestaurante"
                               asp-route-restauranteID="@(res.RestauranteID)" class="btn btn-success btn-sm" style="font-size:12px;">
                                Editar
                            </a>
                            <form method="post" asp-action="EliminarRestaurantes" class="pt-1 mx-1">
                                <button type="submit" value="@res.RestauranteID" name="restauranteID" class="btn btn-outline-danger btn-sm" style="font-size:12px;">
                                    Eliminar
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .tableListarRest {
        box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);
        border-radius: 15px;
    }
    .encabezados {
        border-radius: 15px;
    }
    h2 {
        color: #B57600;
        text-align:center;
        margin:10px;
    }
    .btnCrear {
        color: #ECA51F;
        border: 1px solid #ECA51F;
    }
</style>


