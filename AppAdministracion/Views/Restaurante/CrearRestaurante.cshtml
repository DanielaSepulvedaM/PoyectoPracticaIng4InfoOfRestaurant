@{
    ViewData["Title"] = "CrearRestaurante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Entidades.Restaurante
<div class="row justify-content-center m-4">
    <div class="col-6">
        <h2>Crear un restaurante</h2>
        <form asp-action="CrearRestaurante" method="post" class="border border-light p-4" style="box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);">
           
            <div class="form-group">
                <label>Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del restaurante" style="background: #f2f2f2;"/>
            </div>
            <div class="form-group">
                <label>Nit</label>
                <input asp-for="Nit" class="form-control" placeholder="Ingrese el Nit del restaurante" style="background: #f2f2f2;"/>
            </div>
            <div class="form-group">
                <label>Telefono</label>
                <input asp-for="Telefono" class="form-control" placeholder="Ingrese el telefono del restaurante" style="background: #f2f2f2;"/>
            </div>
            <div class="form-group">
                <label>Direccion</label>
                <input asp-for="Direccion" class="form-control" placeholder="Ingrese la direccion del restaurante" style="background: #f2f2f2;"/>
            </div>
            <div class="form-group">
                <label>Barrio</label>
                <input asp-for="Barrio" class="form-control" placeholder="Ingrese el barrio del restaurante" style="background: #f2f2f2;" />
            </div>
            <div class="pt-4">
                <button type="submit" class="btn btn-lg btn-block" style="background: #ECA51F; color:#E5E5E5;">Crear</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="ListarRestaurantes">Volver</a>
</div>

<style>
    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }

</style>