@model IEnumerable<Entidades.Mesa>

@{
    ViewData["Title"] = "Mesas";
}

<div class="container-fluid mt-4 container">
    <a class="btnCrear btn-lg ml-4" asp-action="Crear">Añadir Mesa</a>
    <h2>Listado de Mesas</h2>
    <table class="table table-striped table-sm text-center p-4 tablaListarMesa">
        <thead class="encabezados">
            <tr>
                <th>
                    Mesa
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identificador)
                    </td>

                    <td>
                        <div class="d-flex justify-content-center">
                            <div class="btn btn-success btn-sm mx-2">
                                @Html.ActionLink("Editar", "Editar", new { id = item.MesaId })
                             </div>
                            <div class="btn btn-dark btn-sm mx-2">
              
                                @Html.ActionLink("Generar QR", "GenerarQR", new { id = item.MesaId }, new { target = "_blank" })
                            </div>
                            <form method="post" asp-action="Eliminar">
                                <button class="btn btn-outline-danger"  type="submit" name="id" value="@item.MesaId">Eliminar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .tablaListarMesa {
        box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);
        border-radius: 15px;
    }

    .encabezados {
        border-radius: 15px;
    }

    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }

    .btnCrear {
        color: #ECA51F;
        border: 1px solid #ECA51F;
    }
    .container{
        width:900px;
    }
</style>