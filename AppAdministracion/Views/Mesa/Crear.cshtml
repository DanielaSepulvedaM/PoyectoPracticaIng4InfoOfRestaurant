@model Entidades.Mesa

@{
    ViewData["Title"] = "Crear";
}

<div class="row justify-content-center m-4">
    <div class="col-6 my-4">
        <h2>Agregar mesas  y generar codigo QR</h2>
        <form asp-action="Crear" class="border border-light p-4" style="box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identificador" class="control-label"></label>
                <input asp-for="Identificador" class="form-control" placeholder="Ingresar el identificador de la mesa" />
                <span asp-validation-for="Identificador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-lg btn-block" style="background: #ECA51F; color:#E5E5E5;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
<style>
    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }
</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
