@using Entidades.Infraestructura.Mensajeria

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleLayout.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="menuLateral col-1 no-gutters vh-100">
                <div class="letrasLogo">
                    <p class="puntos text-align text-center">...</p>
                    <p class="txt1">InfoOf</p>
                    <p class="txt2 ml-4">Restaurant</p>
                </div>
                <ul class="list-group list-group-flush">
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="justify-content-center d-flex">
                            <a asp-action="ListarRestaurantes"
                               asp-controller="Restaurante">
