@using Identity.Model
@model IEnumerable<Rol>

@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid mt-4">
    <a class="btnCrear btn-lg ml-4" asp-action="Crear">Crear nuevo rol</a>
    <h2>Listado de Roles</h2>
    <table class="table table-striped table-sm text-center p-4 tablaListarRol">
        <thead class="encabezados">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a asp-action="Editar" 
                               asp-controller="Roles" 
                               asp-route-RolId="@item.Id" class="btn btn-success btn-sm" style="font-size:12px;">
                                Editar
                            </a>
                            <form method="post" asp-action="Eliminar" class="pt-1 mx-1">
                                <button type="submit" value="@item.Id" name="RolID" class="btn btn-outline-danger btn-sm" style="font-size:12px;">
                                    Eliminar
                                </button>
                            </form>  
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .tablaListarRol {
        box-shadow: 0px 8px 15px -3px rgba(0, 0, 0, 0.41);
        border-radius: 5px;
    }

    .encabezados {
        border-radius: 5px;
    }

    h2 {
        color: #B57600;
        text-align: center;
        margin: 10px;
    }

    .btnCrear {
        color: #ECA51F;
        border: 1px solid #ECA51F;
    }
</style>